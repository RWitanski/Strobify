<controls:MetroWindow x:Class="Strobify.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"        
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Strobify.ViewModel"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="Strobify" Height="350" Width="525">

    <Grid>
        <ComboBox ItemsSource="{Binding GameControllers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDevice}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="383"/>
        <Button Content="Get devices" Command="{Binding GetDevicesCommand}" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top" Width="109"  Height="22"/>
        <Button Content="Assign Button" Command="{Binding GetButtonIdCommand}" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="119"/>
        <Label Content="Assigned Controller Button: " HorizontalAlignment="Left" Margin="134,42,0,0" VerticalAlignment="Top" Width="170"/>
        <Label Content="{Binding AssignedControllerButtonText}" HorizontalAlignment="Left" Margin="309,42,0,0" VerticalAlignment="Top" Width="84" FontWeight="Bold"/>
    </Grid>
</controls:MetroWindow>