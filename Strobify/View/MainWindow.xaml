<Window x:Class="Strobify.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        xmlns:vm="clr-namespace:Strobify.ViewModel"
        DataContext="{Binding Source={StaticResource Locator}, Path=Main}"
        Title="Strobify" Height="350" Width="525">
   
    <Grid>
        <Button Content="{Binding DevicesContent}" HorizontalAlignment="Left" Margin="398,10,0,0" VerticalAlignment="Top" Width="109" Command="{Binding GetDevicesCommand}" Height="22"/>
        <ComboBox ItemsSource="{Binding GameControllers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedDevice}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="383"/>
    </Grid>
</Window>